<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- sql 작성 -->
<mapper namespace="com.smhrd.mapper.CalendarMapper">
	
	<insert id="insertCalendar" parameterType="calendarDTO">
		insert into Calendar values(id=#{id},calendarDate=#{calendarDate},exercise=#{exercise},memo=#{memo})		
	</insert>
	
	<select id="showCalendar" resultType="calendarDTO">
		select * from Calendar where id=#{id}
	</select>
	
	<delete id="deleteCalendar" parameterType="String">
		delete from Calendar where id=#{id}
	</delete>
	
</mapper>